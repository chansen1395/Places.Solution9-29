@using Places.Models;

<h1>Places I've been</h1>
@if (Model.Count == 0)
{
  <p>There are no locations in the list.</p>
}
<ul>
  @foreach (Location location in Model)
  {
    <li><a href='/locations/@location.Id'>@location.CityName</a></li>
  }
</ul>

<a href="/locations/new">Add a new location.</a>

<form action="/locations/delete" method="post">
  <button type="submit" name="button">Clear All Locations</button>
</form>